<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ball Is Being</title>
  </head>
  <body>
    <h1>BALL IS BEING</h1>
    <nav><a href="/home/new">Create a New Post</a></nav>
    <ul>
      <% posts.forEach(post => { %>
      <li>
        <a href="/home/<%=post._id; %>"> <%=post.title; %> </a>
        <form action ="/home/<%= post.id %>?_method=DELETE" method="POST">
          <input type="submit" value="DELETE"/>
        </form>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
