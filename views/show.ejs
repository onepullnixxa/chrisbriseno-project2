<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs')%>
  </head>
  <body>
    <%- include('./partials/header.ejs')%>

    <style type="text/css">
      .parent {
        height: 80%;
        width: 100%;
        padding: 1em;
        position: relative;
      }

      .child {
        top: 80px;
        bottom: 0px;
        left: 100px;
        right: 0px;
        position: absolute;
      }

      p {
        text-align: left;
        margin-left: 1000px;
        padding-right: 175px;
      }

      #post-title {
        font-family: "Baskervville", serif;
        font-size: xx-large;
        margin-top: 75px;
        margin-bottom: 0px;
      }

      #post-author {
        font-family: "Baskervville", serif;
        font-size: x-large;
      }

      #content-text {
        font-family: "Lora", serif;
        font-size: medium;
        margin-top: 40px;
        word-spacing: 2px;
      }

      #image {
        width: 775px;
        height: 650px;
        object-fit: contain;
      }

      .buttons {
        font-family: "Baskervville", serif;
        position: absolute;
        top: 775px;
        bottom: 0px;
        left: 1550px;
      }

			input[type="submit"] {
				font-family: "Baskervville", serif;
        font-size: 14px;
			}

    </style>

    <div class="parent">
      <p id="post-title"><%=post.title %></p>
      <p id="post-author">Written By: <%=post.author %></p>
      <p id="content-text"><%=post.contentText %></p>

      <div class="child" id="image">
        <img id="image" src="<%= post.img%>" alt="" />
      </div>

      <div class="buttons">
        <a href="/home/<%=post._id %>/edit">Edit Post</a>
        <form
          style="display: inline; margin-left: 20px"
          action="/home/<%= post.id %>?_method=DELETE"
          method="POST"
        >
          <input type="submit" value="Delete Post" />
        </form>
      </div>
    </div>
  </body>
</html>
